generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  log       Log[]
}

model Log {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  whatIDid   String[]
  whatsNext  String[]
  bug        String[] // this is fine as an array if you expect multiple bugs

  projectId  String
  project    Project  @relation(fields: [projectId], references: [id])

  todo       Todo?   
}

model Todo {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  todos     Json     // structured array of category objects

  logId     String   @unique             
  log       Log      @relation(fields: [logId], references: [id])
}
